-var metaTitulo = "Clases de pug"
-var titulo = "Titulo Principal"
-var titulos = ["Titulo principal", "subtitulo1", "subtitulo2", "subtitulo3"]
-var usuario = "David"
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{metaTitulo}
    link(rel="stylesheet", href="./css/ejercicio-pug.css")
  body
    header
      h1 PlatziGames
      if usuario
        a Hola #{usuario}
      else
        a.boton Registro
    section.intro
      .intro__imagen: img(src="images/imagen.png", alt="imagen generica")
      .intro__contenido
        h2 #{titulos[0]} 
        p
          |Lorem ipsum dolor sit amet consectetur adipisicing elit. 
          |Aut quo totam accusantiu    dignissimos numquam sed!
          |Lorem ipsum dolor sit amet consectetur adipisicing elit.
          span Lorem ipsum dolor sit amet, consectetur adipisicing.
        a.boton Leer Mas
    ul
      each titulo in titulos
        li=titulo
